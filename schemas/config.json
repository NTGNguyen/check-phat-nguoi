{
  "$defs": {
    "ApiEnum": {
      "enum": [
        "checkphatnguoi.vn",
        "csgt.vn"
      ],
      "title": "ApiEnum",
      "type": "string"
    },
    "LogLevelEnum": {
      "enum": [
        "NOTSET",
        "DEBUG",
        "INFO",
        "WARNING",
        "ERROR",
        "CRITICAL"
      ],
      "title": "LogLevelEnum",
      "type": "string"
    },
    "PlateInfo": {
      "properties": {
        "plate": {
          "description": "Biển số",
          "examples": [
            "60A64685",
            "98-A-56604",
            "30-F88251",
            "59XB-00000"
          ],
          "title": "Biển số",
          "type": "string"
        },
        "type": {
          "anyOf": [
            {
              "enum": [
                1,
                2,
                3
              ],
              "type": "integer"
            },
            {
              "enum": [
                "car",
                "motorbike",
                "electric_motorbike"
              ],
              "type": "string"
            }
          ],
          "description": "Loại phương tiện để gửi request cũng như lọc loại phương tiện đối với các API không lọc loại phương tiện sẵn",
          "title": "Loại phương tiện"
        },
        "api": {
          "anyOf": [
            {
              "anyOf": [
                {
                  "items": {
                    "$ref": "#/$defs/ApiEnum"
                  },
                  "type": "array"
                },
                {
                  "$ref": "#/$defs/ApiEnum"
                }
              ],
              "minLength": 1
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Sử dụng API từ trang web nào. Config giống \"api\" ở ngoài .Để trống sẽ sử dụng API define ở scope ngoài.",
          "title": "API"
        },
        "owner": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Ghi chú chủ sở hữu (phù hợp khi dùng nhắc ai đó với lựa chọn notifications)",
          "examples": [
            "@kevinnitro",
            "dad"
          ],
          "title": "Ghi chú chủ sở hữu"
        }
      },
      "required": [
        "plate",
        "type"
      ],
      "title": "Thông tin thiết lập cho biển số",
      "type": "object"
    },
    "TelegramNotificationConfig": {
      "properties": {
        "enabled": {
          "default": true,
          "description": "Kích hoạt",
          "title": "Enabled",
          "type": "boolean"
        },
        "telegram": {
          "$ref": "#/$defs/TelegramNotificationEngineConfig",
          "description": "Telegram"
        }
      },
      "required": [
        "telegram"
      ],
      "title": "Telegram và kích hoạt",
      "type": "object"
    },
    "TelegramNotificationEngineConfig": {
      "properties": {
        "bot_token": {
          "description": "Bot token Telegram",
          "examples": [
            "2780473231:weiruAShGUUx4oLOMoUhd0GiREXSZcCq-uB"
          ],
          "title": "Bot Token",
          "type": "string"
        },
        "chat_id": {
          "description": "Chat ID Telegram",
          "examples": [
            "-1001790012349"
          ],
          "title": "Chat Id",
          "type": "string"
        }
      },
      "required": [
        "bot_token",
        "chat_id"
      ],
      "title": "Telegram",
      "type": "object"
    }
  },
  "properties": {
    "plates_infos": {
      "description": "Danh sách các biển xe",
      "items": {
        "$ref": "#/$defs/PlateInfo"
      },
      "minItems": 1,
      "title": "Danh sách biển xe",
      "type": "array"
    },
    "notifications": {
      "description": "Danh sách các thiết lập để thông báo",
      "items": {
        "$ref": "#/$defs/TelegramNotificationConfig"
      },
      "title": "Danh sách thông báo",
      "type": "array"
    },
    "api": {
      "anyOf": [
        {
          "items": {
            "$ref": "#/$defs/ApiEnum"
          },
          "type": "array"
        },
        {
          "$ref": "#/$defs/ApiEnum"
        }
      ],
      "default": [
        "checkphatnguoi.vn",
        "csgt.vn"
      ],
      "description": "Sử dụng API từ trang web nào. Mặc định sẽ là list các API và dừng khi 1 API lấy dữ liệu thành công. Có thể điền giá trị trùng để retry. Hoặc chỉ dùng 1 API.",
      "minLength": 1,
      "title": "API"
    },
    "pending_fines_only": {
      "default": true,
      "description": "Chỉ lọc các thông tin vi phạm chưa nộp phạt",
      "title": "Lọc chưa nộp phạt",
      "type": "boolean"
    },
    "detail": {
      "default": false,
      "description": "Hiển thị tất cả thông tin có thể hiển thị",
      "title": "Hiển thị đầy đủ thông tin",
      "type": "boolean"
    },
    "request_timeout": {
      "default": 10,
      "description": "Thời gian (s) để gửi request đến server API và gửi notify message",
      "title": "Thời gian request",
      "type": "integer"
    },
    "request_per_time": {
      "default": 5,
      "description": "Số lượng request tối chạy song song",
      "minimum": 0,
      "title": "Số lượng request",
      "type": "integer"
    },
    "detail_log": {
      "default": false,
      "description": "Log chi tiết",
      "title": "Log chi tiết",
      "type": "boolean"
    },
    "log_level": {
      "$ref": "#/$defs/LogLevelEnum",
      "default": "WARNING",
      "description": "Mức độ log",
      "title": "Mức độ log"
    }
  },
  "required": [
    "plates_infos"
  ],
  "title": "Config",
  "type": "object"
}